@using mvcapp.Models.Users;
@model RegisterViewModel;

<form asp-action="Register" asp-controller="Users">
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Name" type="text" class="form-control" placeholder="Введите имя" />
                <label asp-for="Name" class="form-label">Имя</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="SurName" type="text" class="form-control" placeholder="Введите фамилию" />
                <label asp-for="SurName" class="form-label">Фамилия</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="SurName"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Email" type="text" class="form-control" placeholder="Введите логин"/>
                <label asp-for="Email" class="form-label">Логин</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" value="@Model?.Password"/>
                <label asp-for="Password" class="form-label">Пароль</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="Повторите пароль" value="@Model?.RepeatPassword"/>
                <label asp-for="RepeatPassword" class="form-label">Пароль</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
    </div>

    <div class="text-danger mb-2">@ViewBag.Error</div>
    <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
</form>